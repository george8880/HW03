<h1>Listing movies</h1>

<table class="table">  
  <thead>  
    <tr>  
      <th>Movie Name</th>  
      <th>Genre</th>  
      <th>Year Released</th>  
      <th>Average Rating</th>  
    </tr>  
  </thead>  
  
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.year %></td>
    <td><%= movie.get_score %></td>
    <td><%= link_to 'Show', movie %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path %>
